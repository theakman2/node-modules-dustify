#!/usr/bin/env node

var path = require("path");

var rawArgv = process.argv.slice(2);

var argv = require("minimist")(rawArgv);

if (argv.help || !rawArgv.length) {
	require("fs").readFile(path.join(__dirname,"help.txt"),function(err,help){
		if (err) {
			throw err;
		}
		console.log(help.toString());
	});
} else if (argv.version) {
	console.log(require(__dirname+"/../package.json").version);
} else {
	require("../lib/dustify.js")(argv,function(err,filesProcessed){
		if (err) {
			console.error("dustify >> processing failed");
			console.error("dustify >> reason: " + (err.message||err));
			return;
		}
		console.log(
			"dustify >> processing complete"
			+ " (" + filesProcessed.length + " files processed)"
		);
	});
}